{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": ["**/dist/**", "**/node_modules"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded",
      "trailingComma": "es5"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/dist/**", "**/node_modules"],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsoleLog": "error",
        "noExplicitAny": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
